 <div class="container mt-5 ">
    <div class="row justify-content-center">
      <div class="col-md-5">
        <div class="card">
          <div class="card-body p-3">
            <h2 class="card-title text-center">Log in</h2>

            <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "user-form" }) do |f| %>
              <div class="form-group mb-3">
                <%= f.label :email, class: "mb-1" %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your email" %>
              </div>

              <div class="form-group mb-3">
                <%= f.label :password, class: "mb-1" %>
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Enter your password" %>
              </div>

              <div class="d-flex flex-column justify-center align-center mt-4">
                <%= f.submit "Log in", class: "btn btn-primary btn-block" %>
              </div>
            <% end %>

            <div class="mt-3 d-flex flex-column align-items-center justify-content-center">
              <div>
                <%= link_to 'Forgot your password?', new_user_password_path %>
              </div>
              <div class="mt-2">
               <span>Don't have an account?</span> <%= link_to "Sign up", new_user_registration_path %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
