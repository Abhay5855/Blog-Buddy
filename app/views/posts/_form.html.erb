<div class="modal fade modal-xl" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5 text-center" id="staticBackdropLabel">Create Blog</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= form_with(model: post, class: "contents") do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
   
   <div class="d-flex gap-5">
    <div class="border-end">
      <div class="" style="width:60%">
    <%= form.file_field :image %>
  </div>
    </div>
    <div>
      <div class="my-2 d-flex flex-column">
    <%= form.label :title %>
    <%= form.text_field :title, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full", placeholder: "Enter your blog title"%>
  </div>

  <div class="my-5 d-flex flex-column">
    <%= form.label :description %>
    <%= form.text_area :description, placeholder: "Start with your blog", class: "form-control block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  
  
  <div class="form-check form-switch my-5">
    <div>
     <%= form.label :allow_comments %>
    <%= form.check_box :allow_comments, class: "form-check-input", role:"switch" %>

    </div>
    <div class="mt-3">
      <%= form.label :show_likes_count %>
    <%= form.check_box :show_likes_count, class: "form-check-input", role:"switch" %>
    </div>
   
  </div>
    </div>
   </div>
      </div>
      <div class="modal-footer d-flex align-items-center justify-content-center">
<div class="d-flex align-items-center justify-content-center">
    <%= form.submit class: "btn btn-primary rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
      </div>
    </div>
    <% end %>

  </div>