<div id="<%= dom_id post %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= post.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= post.description %>
  </p>

   <p class="my-5">
    <strong class="block font-medium mb-1">Content:</strong>
    <%= post.content %>
  </p>
  
  <% if post.image.attached? %>

      <div class="my-5">
      <%= image_tag(post.image, alt: "blog post") %>
    </div>
    
  <% end %>
  



</div>
