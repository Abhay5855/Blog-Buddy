<div class="card container mt-4">
<div class="card-body flex flex-col gap-2">
    <h1 class="font-bold text-2xl">Profile</h1>
   <div class="flex items-center gap-2">

   <div class="flex items-center justify-center rounded-full w-12 h-12 cursor-pointer bg-sky-600 text-center text-white">
          <%= user_initials(current_user.email) %>
    </div>

    <div class="flex flex-col">
      <p class="font-bold text-lg"><%= current_user.username %></p>
       <p><%= current_user.email %></p>
    </div>
   </div>
   <%# Draft and Publish of user %>
   <div class="flex items-center justify-between">
      <h2 class="font-bold text-lg">Total Posts (<%= current_user.posts.count %>)</h2>

      <%= link_to 'View your posts', posts_path %>
   </div>
</div>
</div>